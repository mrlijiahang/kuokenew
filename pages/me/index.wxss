/* pages/me/index.wxss */
.content{
  width: 100%;
  height: 100vh;
  background-color: #efeff4;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.info{
  width: 100%;
  height: 210rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}
.info-img{
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: red;
  margin-left: 25rpx;
}
.info-name{
  margin-left: 40rpx;
  font-size: 30rpx;
}
.cell{
  width: 100%;
  height: 110rpx;
  background-color: #fff;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.cell-type{
  margin-left: 50rpx;
  font-size: 30rpx;
  width: 150rpx;
  height: 110rpx;
  line-height: 110rpx;
}
.arrow{
  width: 23rpx;
  height: 34rpx;
  margin-right: 50rpx;
}
.btn{
  position: absolute;
  width: 100%;
  height: 110rpx;
  border: none;
  background-color: rgba(0, 0, 0, 0);
}
 button::after {
  border: none;
}  