/* pages/home/login/index.wxss */
.content{
  width: 100%;
  height: 100vh;
  background-color: #efeff4;
  
}
.item{
  width: 610rpx;
  height: 90rpx; 
  margin: 0 70rpx;
  display: flex;
}
.empty{
  width: 37rpx;
  height: 90rpx;
}
.input-view{
  flex: 1;
  border-bottom: 0.5rpx #a7a7aa solid;
  display: flex;
  align-items: center;
}
.input-title{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 29rpx;
  color: #3e3e3e;
}
.inputName{
  flex: 1;
  margin-left: 20rpx;
}
.code{
  width: 160rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  color: #4d8dff;
  margin-top: 30rpx;
  text-align: center;
  background-color: #efeff4;
}
 button::after {
  border: none;
}  
.submitBtn{
  width: 540rpx;
  height: 70rpx;
  background-color: #4d8dff;
  margin-top:140rpx;
  border-radius: 35rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
}
.desc{
  width: 100%;
  height: 20rpx;
  line-height: 20rpx;
  margin-top: 50rpx;
  font-size: 19rpx;
  text-align: center;
}
.desc2{
  width: 100%;
  height: 23rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.dec2-img{
  width: 75rpx;
  height: 23rpx;
}